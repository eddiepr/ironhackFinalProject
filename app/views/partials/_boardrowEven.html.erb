

<div class="row">
	<% (1..8).each do | i, j=i| %>
		<% if (i%2 == 0) %>
			<div class="col-sm-1 column row2 <%= 'column' + i.to_s %> row-even-column-even ">
				
				<!-- use i as reference for x y value in square database and use it to render correct glyphicon if any -->
			</div>
		<% else %>
			<div class="col-sm-1 column row2 <%= 'column' + i.to_s %> row-even-column-odd ">
			</div>
		<% end %>
		<!-- had i = i + 1 here with the for loop -->
	<% end %>
</div>